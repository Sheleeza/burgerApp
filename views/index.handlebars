<body>
  <h1>Burgers!</h1>

<h2>Burgers to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless Eatme}}
      {{> burgers/burger-block Eatme=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block Eatme=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Choose a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="Eatme">Eat me?</label><br>
    <input type="radio" name="Eatme" value="1" checked> Eatme!<br>
    <input type="radio" name="Eatme" value="0"> Devour
  </div>

  <button type="submit">Add Burger</button>
</form>`
</body>
</html>
